<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>FieldsOnFiles RelatedList</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="fieldsList" type="String" label="Fields" default="Title,Description" description="comma-separated list of API names of fields from the ContentVersion object.  Include __c for custom fields" />
            <property name="showSharing" type="Boolean" label="Show sharing options" description="pointless if you don't have communities enabled" />
            <property name="showPreview" type="Boolean" label="Show Preview" />
            <property name="sortBy" type="String" label="Sort By Field" default="Title" />
            <property name="sortDirection" type="String" label="Sort Direction" default="Ascending" datasource="Ascending,Descending" />
            <property name="cardTitle" type="String" label="Title for card on page" default="Files" />

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>